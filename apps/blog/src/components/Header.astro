---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="logo">
			<img src="/logo-aw.jpg" alt="Accessories World" class="logo-img" />
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="external-links">
			<a href="https://accessoriesworld.co.zw" class="main-site-link">
				Main Site
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		border-bottom: 2px solid rgb(var(--gray-light));
		box-shadow: var(--box-shadow);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	
	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	.logo-img {
		height: 32px;
		width: 32px;
		object-fit: contain;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--accent);
		font-weight: 700;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 0;
	}
	nav a {
		padding: 0.75em 1em;
		color: rgb(var(--gray-dark));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s;
	}
	nav a:hover {
		color: var(--accent);
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.main-site-link {
		font-size: 0.85em;
		color: var(--accent) !important;
		font-weight: 500;
	}
	.main-site-link:hover {
		text-decoration: underline !important;
	}
	@media (max-width: 720px) {
		.external-links {
			display: none;
		}
	}
</style>
