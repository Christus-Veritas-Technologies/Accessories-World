generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth & Users ────────────────────────────────────────────

model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sessions Session[]
}

model Wholesaler {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  businessName  String
  contactPerson String
  phone         String?
  address       String?
  approved      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  orders   Order[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userType  UserType
  adminId   String?
  admin     Admin?      @relation(fields: [adminId], references: [id], onDelete: Cascade)
  wholesalerId String?
  wholesaler   Wholesaler? @relation(fields: [wholesalerId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// ─── Product Catalog ─────────────────────────────────────────

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id              String         @id @default(cuid())
  name            String
  slug            String         @unique
  description     String?
  sku             String?        @unique
  retailPrice     Decimal        @db.Decimal(10, 2)
  wholesalePrice  Decimal        @db.Decimal(10, 2)
  retailDiscount  Decimal        @default(0) @db.Decimal(5, 2)
  wholesaleDiscount Decimal      @default(0) @db.Decimal(5, 2)
  stock           Int            @default(0)
  featured        Boolean        @default(false)
  active          Boolean        @default(true)
  categoryId      String?
  category        Category?      @relation(fields: [categoryId], references: [id])
  images          ProductImage[]
  orderItems      OrderItem[]
  views           ProductView[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model ProductView {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}

// ─── Contact Submissions ─────────────────────────────────────

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}

// ─── Orders (Wholesale) ─────────────────────────────────────

model Order {
  id           String      @id @default(cuid())
  orderNumber  String      @unique
  wholesalerId String
  wholesaler   Wholesaler  @relation(fields: [wholesalerId], references: [id])
  status       OrderStatus @default(PENDING)
  totalAmount  Decimal     @db.Decimal(10, 2)
  notes        String?
  items        OrderItem[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
}

// ─── Enums ──────────────────────────────────────────────────

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum UserType {
  ADMIN
  WHOLESALER
}
